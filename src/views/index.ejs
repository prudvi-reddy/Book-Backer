      <section class="contact">
         <h2 id="title">Contact Us</h2>
         <div class="map">
            <iframe
               src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d57278.48097275272!2d78.35945257587899!3d17.364327051547303!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb967009826953%3A0x39543499a8551c94!2zMTfCsDIxJzUxLjMiTiA3OMKwMjMnNDAuNCJF!5e1!3m2!1sen!2sin!4v1592918674029!5m2!1sen!2sin"
               width="100%"
               height="400px"
               frameborder="0"
               style="border: 0"
               allowfullscreen=""
               aria-hidden="false"
               tabindex="0"
            ></iframe>
         </div>
      </section>

      <footer class="contact-details">
         <div class="contact-container">
            <div class="contactInfo">
               <div class="box">
                  <div class="icon"><i class="fa fa-map-marker"></i></div>
                  <div class="text">
                     <h3>Location:</h3>
                     <p>Hyderabad,Telangana,INDIA</p>
                  </div>
               </div>
               <div class="box">
                  <div class="icon"><i class="fa fa-envelope"></i></div>
                  <div class="text">
                     <h3>Email:</h3>
                     <p>sumanth.nithiin@klh.edu.in</p>
                  </div>
               </div>
               <div class="box">
                  <div class="icon"><i class="fa fa-phone"></i></div>
                  <div class="text">
                     <h3>Call:</h3>
                     <p>+91 9014056983</p>
                  </div>
               </div>
            </div>
            <div class="contactForm">
               <form action="/contact" method="post" role="form">
                  <h2>Send Message</h2>
                  <div class="inputBox">
                     <input
                        type="text"
                        name="name"
                        id="name"
                        data-rule="minlen:4"
                        data-msg="Please enter at least 4 chars"
                        required
                     />
                     <span>Name</span>
                  </div>
                  <div class="inputBox">
                     <input
                        type="text"
                        name="email"
                        id="email"
                        data-rule="email"
                        data-msg="Please enter a valid email"
                        required
                     />
                     <span>Email</span>
                  </div>
                  <div class="inputBox">
                     <input
                        type="text"
                        name="subject"
                        id="subject"
                        data-rule="minlen:8"
                        data-msg="Please enter at least 8 chars of subject"
                        required
                     />
                     <span>Subject</span>
                  </div>
                  <div class="inputBox">
                     <textarea
                        rows="8"
                        name="message"
                        id="message"
                        data-rule="required"
                        data-msg="Please write something for us"
                        required
                     ></textarea>
                     <span>Message</span>
                  </div>
                  <div class="inputBox">
                     <button type="submit" name="sbt-btn">Send Message</button>
                  </div>
               </form>
            </div>
         </div>
         <div class="copyright">&copy; Copyright, Designed by Book Backer's Team.</div>
      </footer>
