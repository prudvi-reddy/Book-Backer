<!DOCTYPE html>
<html>
   <head>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
      <link rel="stylesheet" type="text/css" href="css/login.css" />
      <title>Sign In | Up - Book Backer</title>
   </head>
   <body>
      <img class="wave" src="img/wave.png" />
      <div class="login-container">
         <div class="back">
            <a href="/"><i class="fa fa-long-arrow-left"></i>Home</a>
         </div>
         <div class="img">
            <img src="img/bg.svg" />
         </div>
         <div class="main-content">
            <div class="form-box">
               <div class="button-box">
                  <div id="btn"></div>
                  <button type="button" id="loginBtn" class="toggle-btn" onclick="login()">Log In</button>
                  <button type="button" id="regBtn" class="toggle-btn" onclick="register()">Register</button>
               </div>

               <!-- LOGIN FORM -->
               <form method="POST" action="/users/login" class="input-content register-form" id="login">
                  <img src="img/avatar.svg" />
                  <div class="input-div one">
                     <div class="i">
                        <i class="fa fa-user"></i>
                     </div>
                     <div class="div">
                        <h5>Email</h5>
                        <input type="email" name="email" id="email" class="input" required />
                     </div>
                  </div>
                  <div class="input-div pass">
                     <div class="i">
                        <i class="fa fa-lock"></i>
                     </div>
                     <div class="div">
                        <h5>Password</h5>
                        <input type="password" name="password" id="password1" class="input" required />
                        <div class="eye1">
                           <i class="fa fa-eye hide" id="openEye1"></i>
                           <i class="fa fa-eye-slash" id="closeEye1"></i>
                        </div>
                     </div>
                  </div>
                  <a href="#">Forgot Password?</a>
                  <input type="submit" class="btn" value="Login" />
               </form>

               <!-- REGISTER FORM -->
               <form method="POST" action="/users/register" class="input-content" id="register">
                  <div class="input-div one">
                     <div class="i">
                        <i class="fa fa-user"></i>
                     </div>
                     <div class="div">
                        <h5>First Name</h5>
                        <input type="text" name="firstname" id="firstname" class="input" required />
                     </div>
                  </div>
                  <div class="input-div one">
                     <div class="i">
                        <i class="fa fa-user"></i>
                     </div>
                     <div class="div">
                        <h5>Last Name</h5>
                        <input type="text" name="lastname" id="lastname" class="input" required />
                     </div>
                  </div>
                  <div class="input-div two">
                     <div class="i">
                        <i class="fa fa-envelope"></i>
                     </div>
                     <div class="div">
                        <h5>Email</h5>
                        <input type="email" name="email" id="email" class="input" required />
                     </div>
                  </div>
                  <div class="input-div pass">
                     <div class="i">
                        <i class="fa fa-lock"></i>
                     </div>
                     <div class="div">
                        <h5>Password</h5>
                        <input type="password" name="password" id="password2" class="input" required />
                        <div class="eye2">
                           <i class="fa fa-eye hide" id="openEye2"></i>
                           <i class="fa fa-eye-slash" id="closeEye2"></i>
                        </div>
                     </div>
                  </div>
                  <div class="input-div two">
                     <div class="i">
                        <i class="fa fa-map-marker"></i>
                     </div>
                     <div class="div">
                        <h5>Address</h5>
                        <input type="address" name="address" class="input" required />
                     </div>
                  </div>
                  <input type="submit" name="signup" id="signup" class="btn" value="Register" />
               </form>
            </div>
         </div>
      </div>
      <script type="text/javascript" src="js/login.js"></script>
   </body>
</html>
